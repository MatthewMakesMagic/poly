# Copy this to .env and fill in values

# Database (Supabase/Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Dashboard
DASHBOARD_PORT=3333

# ═══════════════════════════════════════════════════════════════════════════════
# POLYMARKET EXECUTION ENGINE - REQUIRED FOR LIVE TRADING
# ═══════════════════════════════════════════════════════════════════════════════

# API Credentials (from Polymarket Builder Codes page)
# Go to: https://polymarket.com -> Settings -> Builder Codes -> View API Details
POLYMARKET_API_KEY=
POLYMARKET_SECRET=
POLYMARKET_PASSPHRASE=

# Private Key (for signing orders)
# This is the private key of your wallet that has funds on Polymarket
# NEVER share this! Keep it secure!
POLYMARKET_PRIVATE_KEY=

# Funder Address (optional - defaults to wallet address from private key)
# Your Polymarket profile address (the address shown on your profile)
POLYMARKET_FUNDER_ADDRESS=

# ═══════════════════════════════════════════════════════════════════════════════
# NOTIFICATIONS (Optional but recommended)
# ═══════════════════════════════════════════════════════════════════════════════

# Discord Webhook for alerts
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=

# ═══════════════════════════════════════════════════════════════════════════════
# LIVE TRADING (Controlled from Dashboard)
# ═══════════════════════════════════════════════════════════════════════════════

# Enable live trading capability (strategies still toggled via dashboard)
LIVE_TRADING_ENABLED=false

# Position size for live trades (start small!)
LIVE_POSITION_SIZE=1

# ═══════════════════════════════════════════════════════════════════════════════
# PROXY (Required for cloud hosting - bypasses Cloudflare blocks)
# ═══════════════════════════════════════════════════════════════════════════════

# Residential proxy URL - REQUIRED when running on Railway/cloud (Cloudflare blocks datacenter IPs)
# Format: http://username:password@proxy-host:port
# Recommended providers: Bright Data, Oxylabs, SmartProxy, IPRoyal
# Example: http://user123:pass456@gate.smartproxy.com:7000
PROXY_URL=

# ═══════════════════════════════════════════════════════════════════════════════
# RISK MANAGEMENT OVERRIDES (Optional)
# ═══════════════════════════════════════════════════════════════════════════════

# These override the defaults in risk_manager.js
MAX_POSITION_PER_TRADE=1
MAX_TOTAL_EXPOSURE=20
MAX_LOSS_PER_DAY=20
