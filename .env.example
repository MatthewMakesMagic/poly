# Poly Trading System - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Node environment
NODE_ENV=development

# Polymarket API credentials
POLYMARKET_API_URL=https://clob.polymarket.com
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=
POLYMARKET_PRIVATE_KEY=
POLYMARKET_FUNDER_ADDRESS=

# Spot price feed
SPOT_PROVIDER=pyth
SPOT_ENDPOINT=

# Logging
LOG_LEVEL=info

# Database (optional - defaults to ./data/poly.db)
DATABASE_PATH=

# Railway deployment (for kill switch)
# Get your API token from https://railway.app/account/tokens
RAILWAY_API_TOKEN=
# Service ID from Railway project settings
RAILWAY_SERVICE_ID=
# Environment ID (optional - defaults to production)
RAILWAY_ENVIRONMENT_ID=
